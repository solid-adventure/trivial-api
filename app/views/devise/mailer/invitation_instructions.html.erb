<p><%= t("devise.mailer.invitation_instructions.hello", name: @resource.name) %></p>

<p><%= t("devise.mailer.invitation_instructions.someone_invited_you", role: @resource.invitation_metadata["role"], organization: Organization.find(@resource.invitation_metadata["org_id"]).name) %></p>

<p><%= link_to t("devise.mailer.invitation_instructions.accept"), "#{ENV['TRIVIAL_UI_URL']}?invitation_token=#{@token}&email=#{@resource.email}" %></p>

<% if @resource.invitation_due_at %>
  <p><%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')) %></p>
<% end %>

<p><%= t("devise.mailer.invitation_instructions.ignore") %></p>
